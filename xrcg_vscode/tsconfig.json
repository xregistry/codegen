{
    "compilerOptions": {
        "target": "ES2020",
        "outDir": "./out",
        "rootDir": "./src",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*",
        "./themes/**/*",
        "./schemas/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
