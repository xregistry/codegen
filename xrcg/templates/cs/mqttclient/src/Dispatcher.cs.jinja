            /// <summary>
            /// Event that is raised when a message of type {{ messagename }} is received.
            /// </summary>
            public event Func<MqttApplicationMessage, {% if isCloudEvent %}CloudEvent?, {% endif %}{{ message_body_type }}?, IDictionary<string, string>, Task>? {{ messagename | strip_namespace }}Async;
            {%- endfor %}
            /// <summary>
            /// Event that is raised when an unhandled message is received.
