        public class {{ class_name }} : DispatcherBase, IDisposable
        {
            private readonly MqttSubscriber _subscriber;
            private readonly Dictionary<string, string> _topicMappings;
            private readonly Dictionary<string, Regex> _topicPatterns;
            private static readonly Regex UriTemplateRegex = new Regex(@"\{([A-Za-z0-9_]+)\}", RegexOptions.Compiled);
            {%- for messageid, message in messagegroup.messages.items() -%}
